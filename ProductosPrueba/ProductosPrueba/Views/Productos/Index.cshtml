@model IEnumerable<ProductosPrueba.Modelos.Productos>
@{
    var parametroCategorias = (ProductosPrueba.Modelos.Categorias)ViewBag.Categorias;
}

<div class="mail-box">
    <h3>Categoria: @parametroCategorias.NombreCategoria</h3>
    <h2>Productos</h2>
    <p>
        <a asp-action="Create" asp-route-idCategorias="@parametroCategorias.Id" class="btn btn-primary info-dialog-window">Nuevo Registro</a>
    </p>
    <div class="table-responsive table-sm table-hover">
        <table id="example" class="table table-hover table-mail">
            <thead class="table-active">
                @*crear la fila con los criterios:*@
                <tr>
                    <th>
                        Categoria
                    </th>
                    <th>
                        Producto
                    </th>
                    <th>
                        Marca
                    </th>
                    <th>
                        Unidad Medidad
                    </th>
                    <th>
                        Precio
                    </th>
                    <th>
                        Stock
                    </th>
                    <th>
                        Fecha Vencimiento
                    </th>
                    <th>
                        Proveedor
                    </th>
                    <th>
                        Documento
                    </th>
                    <th>
                        Imagen
                    </th>
                    <th>
                        Estado
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCategoria)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NombreProducto)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UnidadMedida)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Precio)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Stock)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaVencimiento)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdProveedor)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DocumentoTecnico)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Imagen)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning infoObser-dialog-window">Editar</a>
                            <a data-id="@item.Id" class="btn btn-danger delete-dialog-window">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-controller="Categorias" asp-route-id="@parametroCategorias.IdZona" class="btn btn-dark" asp-action="Index">Regresar a la lista</a>
    </div>
</div>

<div class="modal fade" id="Anular" tabindex="-1" role="dialog" aria-labelledby="modalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color:#da2213;color:white;">
                <button data-dismiss="modal" class="close" type="button">
                    <span aria-hidden="true">×</span>
                    <span class="sr-only">Close</span>
                </button>
                <h2 class="modal-title">Eliminar Productos</h2>
            </div>
            <div class="modal-body">
                <div class="text-center">
                    <h4>¿Estas seguro de eliminar el registro seleccionado?</h4>
                </div>
                <div id="response" class="text-right">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script>
        $("body").on("click", "a.delete-dialog-window", null, function (e) {
            var htmlContent = '<br /><button type="button" id="btnNo" class="btn btn-danger" style="background-color:#da2213;color:white;" data-dismiss="idCategorias" aria-hidden="true">No</button>&nbsp&nbsp<a href="@Url.Action("Delete", "Productos")/' + $(this).data('id') + '" class="btn btn-default">Si</a>';
            $("#response").html(htmlContent);
            $('#Anular').modal('show');
        });
                                        //Cuadro para poder eliminar registro, con boton no y si //"modal"//
    </script>
}